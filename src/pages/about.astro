---
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout primaryTitle="关于">
  <section class="archive">
    <div class="section-content section-tag">
      <div class="archive-tag">
        <h2 class="tag-header">关于我</h2>
        <div class="tag-post-list">
          <ul>
            <li>一个学生</li>
            <li>爱折腾</li>
            <li>爱音乐</li>
          </ul>
        </div>
      </div>

      <div class="archive-tag">
        <h2 class="tag-header">联系我</h2>
        <div class="tag-post-list">
          <ul>
           <li class="list-item-icon">
              <a href="https://twitter.com/JRFank8888" target="_blank">
                <i class="fab fa-twitter"></i> Twitter
              </a>
            </li>
            <li class="list-item-icon">
              <a href="https://t.me/jrfank_bot" target="_blank">
                <i class="fab fa-telegram"></i> Telegram
              </a>
            </li>
            <li class="list-item-icon">
              <a href="https://youtube.com/@jr-fank1119?si=TrE6X2hg-CqeLBzz" target="_blank">
                <i class="fab fa-youtube"></i> YouTube
              </a>
            </li>
            <li class="list-item-icon">
              <a href="https://b23.tv/VFTxSD3" target="_blank">
                <i class="fab fa-tv"></i> Bilibili
              </a>
            </li>
          </ul>
        </div>
      </div>

    </div>
  </section>
  <style>
    .archive-tag ul {
      list-style: none; /* 去掉列表前面的点 */
      padding-left: 0; /* 去掉列表的左内边距 */
    }

    .archive-tag a {
      display: flex; /* 使用 Flex 布局以实现图标和文本左对齐 */
      align-items: center; /* 垂直居中对齐图标和文本 */
      text-decoration: none; /* 去掉链接的下划线 */
    }

    .list-item-icon {
      display: flex; /* 使用 Flex 布局以实现图标和文本左对齐 */
      align-items: center; /* 垂直居中对齐图标和文本 */
    }

    .list-item-icon i {
      margin-right: 10px; /* 设置图标和文本之间的右边距 */
    }
  </style>
</BaseLayout>
